---
import {localizePath} from 'astro-i18next';
import {t} from 'i18next';
---

<header class="no-print">
	<nav>
		<ul>
			<li>
				<a href={localizePath('/')} class="brand">infusion</a>
			</li>
			<li>
				<a href={localizePath('/teas/')}>{t('navbar.teas')}</a>
			</li>
			<li>
				<a href={localizePath('/teas/')}>{t('navbar.favorites')}</a>
			</li>
			<li>
				<a href={localizePath('/brands/')}>{t('navbar.brands')}</a>
			</li>
		</ul>
	</nav>
</header>

<style lang="scss">
	@use 'open-props-scss' as op;
	@use 'src/styles/tokens.scss' as tokens;
	@import 'src/styles/mixins.scss';

	header {
		width: 100%;
		background-color: var(--accent-color);
		box-shadow: op.$shadow-2;

		nav {
			ul {
				list-style: none;
				display: flex;

				li {
					@include fully-clickable();
					padding-block: op.$size-1;
					padding-inline: op.$size-fluid-2;
					border-inline-end: 0.5px solid tokens.$teal-9;
					display: grid;
					place-items: center;

					&:hover {
						background-color: var(--accent-color-hover);
						a {
							text-decoration: underline;
							text-decoration-thickness: 0.5px;
						}
					}

					a {
						color: tokens.$teal-0;
						text-decoration: none;
						font-size: 0.9rem;
						font-weight: bold;
					}
				}
			}
		}
	}

	.brand {
		font-family: var(--brand-font), cursive;
		font-size: 1.9rem;
		font-weight: 400;
	}
</style>