---
import Search from "./Search.astro";

---

<header class="no-print">
	<nav>
		<ul>
			<li>
				<a href="/" class="brand">infusion</a>
			</li>
			<li>
				<a href="/teas/">Teas</a>
			</li>
			<li>
				<a href="/teas/?favorited=true">Favorites</a>
			</li>
			<li class="brands-item">
				<a href="/brands/">Brands</a>
			</li>
			<li class="search-item">
				<Search />
			</li>
		</ul>
	</nav>
</header>

<style lang="scss">
	@use 'open-props-scss' as op;
	@use '../styles/tokens.scss' as tokens;
	@import '../styles/mixins.scss';

	header {
		width: 100%;
		background-color: var(--accent-color);
		box-shadow: op.$shadow-2;

		nav {
			ul {
				list-style: none;
				display: flex;
				flex-wrap: wrap;

				li {
					@include fully-clickable();
					padding-block: op.$size-1;
					padding-inline: op.$size-fluid-2;
					border-inline-end: 0.5px solid tokens.$teal-9;
					display: grid;
					place-items: center;

					&:not(.search-item):hover {
						background-color: var(--accent-color-hover);
						a {
							text-decoration: underline;
							text-decoration-thickness: 0.5px;
						}
					}

					a {
						color: tokens.$teal-0;
						text-decoration: none;
						font-size: 0.9rem;
						font-weight: bold;
					}
				}
			}
		}
	}

	.brands-item {
		@media (max-width: 798px) {
			border-inline-end: none;
		}
	}

	.brand {
		font-family: var(--brand-font), cursive;
		font-size: 1.9rem;
		font-weight: 400;
	}

	.search-item {
		flex-grow: 1;
		min-width: min(40ch, 95vw);

		@media (max-width: 798px) {
			padding-block-end: 0.75rem;
		}
	}
</style>