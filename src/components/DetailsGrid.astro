---
export interface Props {
	minimumDetailWidth?: string;
}

const {minimumDetailWidth = '30ch'} = Astro.props;
---

<dl>
	<slot />
</dl>

<style define:vars={{minimumDetailWidth}} lang="scss">
	@use 'open-props-scss' as op;

	dl {
		display: grid;
		grid-template-columns: repeat(
			auto-fill,
			minmax(
				min(100%, var(--minimumDetailWidth)),
				1fr
			));
		gap: op.$size-4 op.$size-3;
	}
</style>