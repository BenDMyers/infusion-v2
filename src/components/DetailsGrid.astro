---
export interface Props {
	minimumDetailWidth?: string;
	minimumDetailWidthPrint?: string;
}

const {minimumDetailWidth = '30ch', minimumDetailWidthPrint = '20ch'} = Astro.props;
---

<dl>
	<slot />
</dl>

<style define:vars={{minimumDetailWidth, minimumDetailWidthPrint}} lang="scss">
	@use 'open-props-scss' as op;

	dl {
		display: grid;
		grid-template-columns: repeat(
			auto-fill,
			minmax(
				min(100%, var(--minimumDetailWidth)),
				1fr
			));
		gap: op.$size-7 op.$size-3;

		@media print {
			grid-template-columns: repeat(
				auto-fill,
				minmax(
					min(100%, var(--minimumDetailWidthPrint)),
					1fr
				));
		}
	}

</style>