---
import type { WithId } from 'mongodb';
import type { Steep, Tea } from '../types/api';
import { generateSteepCta } from '../utils/generate-steep-cta';
import CtaWell from './CtaWell.astro'

export interface Props {
	tea: WithId<Tea>;
	steeps: WithId<Steep>[];
	url: URL;
};

const {tea, steeps, url} = Astro.props;
const body = generateSteepCta(tea, steeps);

---

<CtaWell
	body={body}
	linkText="Log a Steep"
	url={url}
	iconName="coffee"
/>

<style is:global>
	.cta-well {
		margin-block: 1rem;
	}
</style>