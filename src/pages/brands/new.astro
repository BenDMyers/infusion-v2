---
import Layout from '../../layouts/Layout.astro';
import FormLogic from '../../components/FormLogic.astro';

---

<Layout title="Add a Brand">
	<h1>Add a Brand</h1>
	<form action="/api/brand" method="post">
		<div>
			<label for="name">Name</label>
			<input type="text" required name="name" id="name" minlength="1" aria-describedby="name-error" />
			<small id="name-error" class="error-message"></small>
		</div>
		<div>
			<label for="url">URL</label>
			<input type="url" name="url" id="url" aria-describedby="url-error" />
			<small id="url-error" class="error-message"></small>
		</div>
		<div>
			<label for="twitter">Twitter</label>
			<input
				type="text"
				name="twitter"
				id="twitter"
				pattern="^[a-zA-Z0-9_]{1,15}$"
				title="Provide the brand's Twitter handle"
				aria-labelledby="twitter-error" />
			<small id="twitter-error" class="error-message"></small>
		</div>
		<button type="submit">
			<span class="contents">Submit</span>
		</button>
	</form>
</Layout>
<FormLogic />

<style lang="scss">
	@use 'open-props-scss' as op;

	:global(form) {
		margin-block-start: op.$size-4;
	}
</style>